version: "3"

services:
  <%= @app_name %>:
    image: <%= @app_name %>:x.x.x
    container_name: <%= @app_name %>
    restart: always
    environment:
      - env=dev
    volumes:
      - ./data/<%= @app_name %>:/var/lib/<%= @app_name %>/data
    ports:
      - 666:666
    networks:
      - <%= @app_name %>

networks:
  <%= @app_name %>:
    name: <%= @app_name %>
