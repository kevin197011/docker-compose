[mysqld]
# Basic settings
default-storage-engine = INNODB
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4'

# Performance settings
max_connections = 300
max_connect_errors = 1000
table_open_cache = 512
max_allowed_packet = 128M

# Connection timeout settings - 修复连接丢失问题
# wait_timeout: 非交互式连接超时时间（秒），默认 28800（8小时）
wait_timeout = 28800
# interactive_timeout: 交互式连接超时时间（秒），默认 28800（8小时）
interactive_timeout = 28800
# net_read_timeout: 网络读取超时时间（秒），默认 30
net_read_timeout = 120
# net_write_timeout: 网络写入超时时间（秒），默认 60
net_write_timeout = 120
# connect_timeout: 连接超时时间（秒），默认 10
connect_timeout = 10

# InnoDB settings
innodb_buffer_pool_size = 256M
# MySQL 8.0: 使用新的 redo log 配置替代已弃用的 innodb_log_file_size
innodb_redo_log_capacity = 268435456
innodb_log_buffer_size = 32M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 120

# Logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Binary logging
# MySQL 8.0: binlog_format 已弃用，默认使用 ROW 格式
log-bin = mysql-bin
binlog_expire_logs_seconds = 604800

# MySQL 8.0: 保留 mysql_native_password 以兼容旧客户端
# 注意: default_authentication_plugin 已弃用，但为了兼容性暂时保留
# 未来版本应迁移到 caching_sha2_password
default_authentication_plugin = mysql_native_password
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# Security
bind-address = 0.0.0.0
# MySQL 8.0: 使用 host_cache_size=0 替代已弃用的 skip-name-resolve
host_cache_size = 0

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4